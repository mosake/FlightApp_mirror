<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs.b07.flightmanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileActivity" />
        <activity android:name=".EditNameActivity" />
        <activity android:name=".RegisterStep2Activity" />
        <activity android:name=".RegisterStep1Activity" />
        <activity android:name=".EditAddressActivity" />
        <activity android:name=".EditBillingActivity" />
        <activity android:name=".WelcomeActivity" />
        <activity android:name=".SearchItineraryActivity" />
        <activity android:name=".AdminRegistrationActivity" />
        <activity android:name=".AdminWelcomeActivity" />
        <activity android:name=".SearchClientActivity" />
        <activity android:name=".UploadActivity" />
        <activity android:name=".ItinerarySearchResultActivity" />
        <activity android:name=".SearchClientToBookActivity" />
        <activity android:name=".SearchFlightActivity" />
        <activity android:name=".FlightProfileActivity" />
        <activity android:name=".EditFlightInfoActivity" />
        <activity
            android:name=".ItineraryDetailActivity"
            android:label="@string/itinerary_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ViewBookedItineraryActivity" />
        <activity android:name=".FlightSearchResultActivity" />
    </application>

</manifest>
