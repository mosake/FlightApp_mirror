<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/flightIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_flight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/connectingFlightNumber"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:singleLine="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/departureField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="2dp"
        android:text=""
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/flightIcon"
        android:singleLine="true" />

    <TextView
        android:id="@+id/secondLineField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/flightIcon"
        android:layout_alignStart="@+id/departureField"
        android:paddingBottom="3dp"
        android:textSize="14sp"
        android:text=""
        android:singleLine="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_right_arrow"
        android:layout_alignBottom="@+id/secondLineField" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/connectingArrow"
        android:src="@drawable/ic_connecting_arrow"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/departureField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:text=""
        android:textSize="18sp"
        android:id="@+id/arrivalField"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/connectingArrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/totalPriceField"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageView3"
        android:layout_alignBottom="@+id/secondLineField"
        android:gravity="center"
        android:textColor="#dc0000" />


</RelativeLayout>
